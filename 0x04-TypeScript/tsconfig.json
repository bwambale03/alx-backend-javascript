{
    "compilerOptions": {
      "target": "ES5", // Adjust based on your needs
      "module": "ESNext",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist", // Output directory
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"], // Include all files in 'src' directory
    "exclude": ["node_modules"]
}
  